{
	"$schema": "./node_modules/knip/schema.json",
	"workspaces": {
		".": {
			"entry": ["papi-whitelist.ts"],
			"project": []
		},
		"web": {
			"entry": ["src/main.tsx", "scripts/fetch-tokens.ts", "src/**/*.test.ts"],
			"project": ["src/**/*.{ts,tsx}"],
			"ignoreDependencies": [
				"tailwindcss",
				"@polkadot-api/metadata-builders",
				"@polkadot-api/substrate-bindings"
			],
			"ignore": ["src/types/helpers.ts"]
		}
	},
	"tags": ["-knipignore"],
	"ignore": ["**/*.d.ts", "**/vite-env.d.ts"],
	"ignoreExportsUsedInFile": true
}
